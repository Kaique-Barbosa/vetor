//Crie um algoritimo que receba o nome de 2 alunos
//- o nome de 2 alunos
//-duas disciplinas
//-e duas notas para cada disciplina
Var

colegio: vetor[1..2,1..4] de caracter
i, j, p : inteiro
Inicio

   para i de 1 ate 2 faca
      escreval("Digite o nome dos alunos")
      leia(colegio[i])
      limpatela
    fimpara

     para i de 1 ate 2 faca
         escreval("Digite o nome da", i ,"º disciplina")
         leia(colegio[i,2])
             para j de 3 ate 4 faca
                  escreval("Digite a nota de: ",colegio[i,2])
                  leia(colegio[i,j])
            fimpara
            limpatela
      fimpara
      
      
      para i de 1 ate 2 faca
           escreval("O nome dos alunos foram: ", colegio[i])
           escreval("Materia: ", colegio[i,2])
          escreval("As notas de: ",colegio[1,2]," Foram: ", colegio[i,3])
          escreval("As notas de: ",colegio[2,2]," Foram: ", colegio[i,4])
          escreval("-------------------------------")
          escreval()
      fimpara

Fimalgoritmo
