//Crie um algoritomo que receba os dados de 2 pessoas
//- o nome;
//-a idade;
//e, suas medidas:
//-altura
//-peso
Var

pessoas: vetor[1..2,1..4] de caractere
i: inteiro
Inicio

   para i de 1 ate 2 faca
      escreval("Digite seu nome")
      leia(pessoas[i])

      escreval("Digite sua idade")
      leia(pessoas[i,2])

      escreval("Vamos aferir suas medidas")
      escreval()
      
      escreval("Digite sua altura")
      leia(pessoas[i,3])
      escreval("Digite seu peso")
      leia(pessoas[i,4])
      
      limpatela
   fimpara


   para i de 1 ate 2 faca
      escreval("Nome: ", pessoas[i] )
      escreval("Idade: ", pessoas[i,2] )
      escreval("Altura: ", pessoas[i,3])
      escreval("Peso: ", pessoas[i,4])
      
      escreval("----------------------")
      escreval()
   fimpara

Fimalgoritmo
